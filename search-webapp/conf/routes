### Site
# Site index
GET     /                                           de.qaware.findfacts.webapp.controllers.HomeController.index

### Swagger-ui
# Redirect to swagger doc index
GET     /docs                                       de.qaware.findfacts.webapp.controllers.HomeController.redirectDocs
# Deliver swagger-ui assets
GET     /docs/*file                                 controllers.Assets.at(path:String="/public/swagger-ui", file:String)
# Deliver generated swagger.json
GET     /swagger.json                               controllers.ApiHelpController.getResources

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                               controllers.Assets.versioned(file)

### RESTful interface
GET     /v1/indexes                                 de.qaware.findfacts.webapp.controllers.QueryController.indexes
# Retrieves detailed information about a single entity
GET     /v1/:index/entities/:id                     de.qaware.findfacts.webapp.controllers.QueryController.entity(index: String, id: String)
# Retrieves short entry for a single command
GET     /v1/:index/entities/block/short/:id         de.qaware.findfacts.webapp.controllers.QueryController.shortBlock(index: String, id: String)
# Resolves a theory entity one level deep
GET     /v1/:index/entities/theory/resolved/:id     de.qaware.findfacts.webapp.controllers.QueryController.resolved(index: String, id: String)
# Searches by a complete query
POST    /v1/:index/search                           de.qaware.findfacts.webapp.controllers.QueryController.search(index: String)
# Retrieves facet results for each field
POST    /v1/:index/facet                            de.qaware.findfacts.webapp.controllers.QueryController.facet(index: String)
