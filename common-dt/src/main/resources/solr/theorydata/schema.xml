<?xml version="1.0" encoding="UTF-8" ?>
<schema name="theorydata" version="1.6">
    <fields>
        <field name="_root_" type="string" indexed="true" stored="false" docValues="false"/>
        <field name="id" type="string" required="true" docValues="false" uninvertible="true" multiValued="false" omitTermFreqAndPositions="true"/>
        <field name="cmd_kind" type="string" docValues="true" multiValued="false"/>
        <field name="thy_kind" type="string" docValues="true" multiValued="false"/>
        <field name="theory" type="string" docValues="true" multiValued="false" omitNorms="true"/>
        <field name="start_line" type="pint" multiValued="false"/>
        <field name="name" type="full_text" multiValued="false" omitNorms="true"/>
        <field name="name_facet" type="string" multiValued="false" omitNorms="true"/>
        <field name="type" type="type_syntax" multiValued="false"/>
        <field name="type_facet" type="string" multiValued="false"/>
        <field name="doc_kind" type="string" docValues="true" multiValued="false"/>
        <field name="prop" type="term_syntax" uninvertible="false" multiValued="false"/>
        <field name="src_before" type="source_text" uninvertible="false" multiValued="false"/>
        <field name="src" type="source_text" uninvertible="false" multiValued="false"/>
        <field name="src_after" type="source_text" uninvertible="false" multiValued="false"/>
        <field name="uses" type="string" uninvertible="false" multiValued="true" omitTermFreqAndPositions="true"/>
        <field name="type_uses" type="string" uninvertible="false" multiValued="true" omitTermFreqAndPositions="true"/>
        <field name="proof_uses" type="string" uninvertible="false" multiValued="true" omitTermFreqAndPositions="true"/>
        <field name="_version_" type="plong" indexed="false" stored="false" multiValued="false"/>
    </fields>

    <copyField source="type" dest="type_facet"/>
    <copyField source="name" dest="name_facet"/>

    <uniqueKey>id</uniqueKey>

    <types>
        <fieldType name="string" class="solr.StrField" sortMissingLast="true"/>
        <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
        <fieldType name="pint" class="solr.IntPointField" docValues="true"/>
        <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
        <fieldType name="type_syntax" class="solr.TextField">
            <analyzer>
                <filter class="solr.ASCIIFoldingFilterFactory" preserveOriginal="false"/>
                <filter class="solr.PatternReplaceCharFilterFactory" pattern="â‡’" replacement="->"/>
                <tokenizer class="solr.PatternTokenizerFactory" pattern="[\(\)\{\},]|::|->|([^\(\)\{\},\s:-]|:[^\(\)\{\},\s:]|-[^\(\)\{\},\s>])+" group="0"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
        <fieldType name="term_syntax" class="solr.TextField">
            <analyzer>
                <tokenizer class="solr.StandardTokenizerFactory">
                </tokenizer>
            </analyzer>
        </fieldType>
        <fieldType name="source_text" class="solr.TextField">
            <analyzer type="index">
                <charFilter class="solr.HTMLStripCharFilterFactory"/>
                <filter class="solr.PatternReplaceCharFilterFactory" pattern="_" replacement=" _ "/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterGraphFilterFactory"
                        generateWordParts="1" catenateWords="1"
                        generateNumberParts="1" catenateNumbers="0" splitOnNumerics="1"
                        catenateAll="0" splitOnCaseChange="1"
                        stemEnglishPossessive="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.FlattenGraphFilterFactory"/>
            </analyzer>
            <analyzer type="query">
                <charFilter class="solr.HTMLStripCharFilterFactory"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.SynonymGraphFilterFactory" synonyms="isabellesynonyms.txt"/>
            </analyzer>
        </fieldType>
        <fieldType name="full_text" class="solr.TextField">
            <analyzer type="index">
                <filter class="solr.PatternReplaceCharFilterFactory" pattern="_" replacement=" _ "/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterGraphFilterFactory"
                        generateWordParts="1" catenateWords="1"
                        generateNumberParts="1" catenateNumbers="0" splitOnNumerics="1"
                        catenateAll="0" splitOnCaseChange="1"
                        stemEnglishPossessive="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.FlattenGraphFilterFactory"/>
            </analyzer>
            <analyzer type="query">
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
        <!-- Enum kinds cause solr errors when doing advanced faceting. Workaround is to use strings instead (not that expensive for docvalues fields.) -->
        <fieldType name="cmd_kind" class="solr.EnumFieldType" docValues="true" enumsConfig="enumsconfig.xml"
                   enumName="CommandKind"/>
        <fieldType name="thy_kind" class="solr.EnumFieldType" docValues="true" enumsConfig="enumsconfig.xml"
                   enumName="TheoryKind"/>
        <fieldType name="doc_kind" class="solr.EnumFieldType" docValues="true" enumsConfig="enumsconfig.xml"
                   enumName="DocumentationKind"/>
    </types>
</schema>