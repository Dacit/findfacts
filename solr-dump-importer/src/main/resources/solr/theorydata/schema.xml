<?xml version="1.0" encoding="UTF-8" ?>
<schema name="theorydata" version="1.6">
    <fields>
        <field name="id" type="string" required="true" uninvertible="false" multiValued="false"/>
        <field name="sourceFile" type="string" required="true" docValues="true" multiValued="false"/>
        <field name="startPos" type="pint" required="true" uninvertible="false" multiValued="false"/>
        <field name="endPos" type="pint" required="true" uninvertible="false" multiValued="false"/>
        <field name="kind" type="entityKind" required="true" docValues="true" multiValued="false"/>
        <field name="name" type="string" multiValued="false"/>
        <field name="const_type" type="string" multiValued="false"/><!-- TODO constant type representation -->
        <field name="term" type="string" stored="false" uninvertible="false" multiValued="true"/><!--TODO term search: type, stored-->
        <field name="text" type="text_general" stored="false" uninvertible="false" multiValued="false"/>
        <field name="uses" type="string" uninvertible="false" multiValued="true"/>
        <field name="_version_" type="plong" indexed="false" stored="false" multiValued="false" />
    </fields>

    <uniqueKey>id</uniqueKey>

    <types>
        <fieldType name="string" class="solr.StrField" sortMissingLast="true"/>
        <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
        <fieldType name="pint" class="solr.IntPointField" docValues="true" />
        <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
        <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
            <analyzer type="query">
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
        <fieldType name="entityKind" class="solr.EnumFieldType" docValues="true" enumsConfig="enumsConfig.xml"
                   enumName="entityKind"/>
    </types>
</schema>